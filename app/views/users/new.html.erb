<div class="section">
  <div class="container">
  <div class="columns is-centered">

      <div class="column is-4">

      <h2 class="title is-2">Create Account</h2>

      <div class="field">
        <div class="control">
          <%= form_for @user do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>
      </div>


      <div class="field">
        <div class="control">
          <%= f.label :password %>
          <%= f.text_field :password %>
        </div>
      </div>

      <div class="field">
        <div class="control">
      <%= submit_tag 'Let\'s Go!', class: "button is-info is-small" %>
        </div>
      </div>

  </div>
  </div>
</div>

    <% end %>
